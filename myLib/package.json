{
  "name": "my-lib",
  "version": "1.0.0",
  "type": "module",
  "description": "A library",
  "main": "lib/node/index.js",
  "browser": "lib/browser/index.js",
  "types": "lib/types.d.ts",
  "scripts": {
    "build": "npm run clean && npm run build-common && npm run build-node && npm run build-browser",
    "clean": "rimraf ./lib",
    "build-common": "tsc -p ./src/common/tsconfig.json",
    "build-node": "tsc -p ./src/node/tsconfig.json && npm run clean-empty-common",
    "build-browser": "tsc -p ./src/browser/tsconfig.json && npm run clean-empty-common",
    "clean-empty-common": "rimraf ./lib/common"
  },
  "devDependencies": {
    "@types/node": "^14.17.6",
    "rimraf": "^3.0.2",
    "typescript": "^4.9.4",
    "eslint": "^8.3.0",
    "@typescript-eslint/parser": "^5.9.1",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "prettier": "~2.8.0",
    "@rushstack/eslint-config": "~2.5.1",
    "webpack": "^5.0.0",
    "webpack-cli": "~4.9.2",
    "ts-loader": "~9.2.6"
  }
}
